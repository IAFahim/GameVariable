<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageId>Variable.Random</PackageId>
    <Version>1.0.0</Version>
    <Authors>Md Ishtiaq Ahamed Fahim</Authors>
    <Company>GameVariable</Company>
    <Description>Zero-allocation, deterministic random number generation for games.</Description>
    <PackageTags>game;random;pcg;rng;struct;zero-allocation</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" Pack="true" PackagePath="\"/>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Variable.Core\Variable.Core.csproj" />
  </ItemGroup>

</Project>
